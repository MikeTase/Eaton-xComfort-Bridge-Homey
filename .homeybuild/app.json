{
  "id": "com.eaton.xcomfort",
  "name": {
    "en": "Eaton xComfort"
  },
  "description": {
    "en": "Control your Eaton xComfort devices via the xComfort Bridge."
  },
  "version": "1.0.0",
  "author": {
    "name": "Mikey"
  },
  "compatibility": ">=10.0.0",
  "sdk": 3,
  "permissions": [
    "homey:manager:api"
  ],
  "flow": {
    "triggers": [
      {
        "id": "wall_switch_pressed",
        "title": {
          "en": "Wall switch pressed"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=wall_switch"
          }
        ],
        "tokens": [
          {
            "name": "event",
            "type": "string",
            "title": {
              "en": "Event"
            }
          }
        ]
      }
    ]
  },
  
  "drivers": [
    {
      "id": "actuator",
      "name": {
        "en": "Actuator / Dimmer"
      },
      "class": "light",
      "capabilities": [
        "onoff",
        "dim"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "title": {
            "en": "Select actuators/dimmers"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "platforms": [
        "local"
      ]
    },
    {
      "id": "thermostat",
      "name": {
        "en": "Thermostat / Heating"
      },
      "class": "thermostat",
      "capabilities": [
        "measure_temperature",
        "target_temperature"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "title": {
            "en": "Select thermostats"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "platforms": [
        "local"
      ]
    },
    {
      "id": "shading",
      "name": {
        "en": "Shading / Blinds"
      },
      "class": "windowcoverings",
      "capabilities": [
        "windowcoverings_state",
        "windowcoverings_set"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "title": {
            "en": "Select shading devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "platforms": [
        "local"
      ]
    },
    {
      "id": "wall_switch",
      "name": {
        "en": "Wall Switch"
      },
      "class": "sensor",
      "capabilities": [],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          },
          "title": {
            "en": "Select wall switches"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "platforms": [
        "local"
      ]
    }
  ]
}

